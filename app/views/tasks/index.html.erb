<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.name %>
      <%= link_to 'Show', task_path(task) %>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to 'Destroy', task_path(task), method: :delete, data: {confirm: "Ready to delete"} %>
    </li>
  <% end %>
</ul>

<%= link_to 'New ToDo', new_task_path %> 